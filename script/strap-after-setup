#!/usr/bin/env bash
#
# Run by Strap after installing Brewfile dependencies

cd "$(dirname "$0")"/.. || exit

# Only run on macOS
[[ "$OSTYPE" == darwin* ]] && {
  script/macos
  script/terminal
}

script/symlinks
script/install-vscode-extensions

# Use fish as the default shell
if [ "$SHELL" != "*/bin/fish" ]; then
  if ! command -v fish &>/dev/null; then
    brew install fish
  fi
  chsh -s "$(brew --prefix)/bin/fish"
fi
