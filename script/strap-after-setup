#!/usr/bin/env bash
#
# Run by Strap after installing Brewfile dependencies

cd "$(dirname "$0")"/.. || exit

# Only run on macOS
[[ "$OSTYPE" == darwin* ]] && {
  script/macos
  script/terminal
}

script/symlinks
script/install-vscode-extensions

# Use fish as the default shell
if [ "$SHELL" != "/usr/local/bin/fish" ]; then
  chsh -s /usr/local/bin/fish
fi
