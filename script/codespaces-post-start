#!/usr/bin/env bash
#
# Run by github/github codespaces after starting

# Always use ZSH as default shell
if ! grep -q "root.*/bin/zsh" /etc/passwd; then
  chsh -s /bin/zsh root
fi

# Install ZSH tools
apt install -y \
  fonts-firacode \
  zsh-autosuggestions \
  zsh-syntax-highlighting

# Install Starship
sh -c "$(curl -fsSL https://starship.rs/install.sh)" -- -y
